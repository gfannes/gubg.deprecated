#!/usr/bin/env ruby

require("tools/utils")

bytes = String.loadLines(ARGV[0]).join(' ').split(' ').collect{|b|b.to_i(16)}
puts("Loaded #{bytes.length} bytes")
bin = bytes.pack("c*")
puts bin.hexdump
if ARGV.length > 1
  puts("Exporting to \"#{ARGV[1]}\"")
  bin.export(ARGV[1])
end


